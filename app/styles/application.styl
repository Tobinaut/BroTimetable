@import 'nib'

// ---
// Глобальные стили, убрать!
// ---
body
  font-family 'Helvetica Neue'
  font-weight  200
  font-size    12px


// ------------------
// Стили компонента
// ------------------
.timetable-editor-component

  // --------------------------
  // Компонент для одного дня
  // --------------------------
  .day-editor-component

    user-select: none
    .add-button
      font-size 20px
      margin 0 5px

      &:not(.active)
        pointer-events none
        opacity 0.2

      &.active
        cursor pointer

    // Интервал времени
    .day-interval
      display inline-block
      background-color rgba(0,0,0,0.04)
      margin 1px 2px
      padding 3px 5px
      border-radius 5px
      border 1px solid rgba(0,0,0,0.1)

      // Кнопочка для удаления интервала
      .remove-button
        margin-left 5px
        cursor pointer
        color rgba(0,0,0,0.2)

        transition 0.15s color ease

        &:not(.active)
          pointer-events none
          opacity 0.3

        &.active
          cursor pointer

          &:hover
            color rgba(0,0,0,0.3)

  // ---
  // Компонент для выбора времени
  // ---
  .time-editor-component
    display inline-block
    position relative

    input
      width 40px
      height 18px
      text-align center
      border none
      outline none

    // Список с подсказками
    .suggestion-list
      position absolute
      box-shadow 0px 1px 3px #eee
      max-height 200px
      background-color white
      border-radius 3px
      border 1px solid #dedede
      overflow hidden
      z-index 3
      top 25px
      left -10px

      // Анимация появления
      transition all 0.1s ease
      &:not(.shown)
        visibility hidden
        opacity 0
        transform scale(0.2)

      &.shown
        visibility visible
        opacity 1

      .suggestion
        padding 2px 15px
        cursor pointer
        color #333

        &.selected
          background-color rgba(0,0,0,0.02)





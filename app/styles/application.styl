@import 'nib'

.time-editor-component
  display inline-block
  position relative

  input
    width 40px
    text-align center

  .suggestion-list
    box-shadow 0px 1px 2px #eee

    position absolute
    max-height 196px
    background-color white
    border-radius 3px
    border 1px solid #dedede
    overflow hidden
    z-index 3
    top 25px
    left -10px

    transition all 0.1s ease

    &:not(.shown)
      visibility hidden
      opacity 0
      transform scale(0.9)

    &.shown
      visibility visible
      opacity 1

    .suggestion
      padding 2px 15px
      cursor pointer
      color #333

      &.selected
        background-color #f0f0f0

